<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/xinchun5"
    android:layout_width="wrap_content"
    android:id="@+id/ffflll"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/touxiang"
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:layout_height="wrap_content" />



        <ImageView
            android:src="@drawable/xinchun6"
            android:id="@+id/left_im"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/xinchun7"
            android:id="@+id/right_im"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/xinchun8"
            android:id="@+id/bootn_im"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/zi_ll"
            android:layout_toRightOf="@+id/touxiang"
            android:gravity="center"
           android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/test3"
                    android:textSize="80sp"
                    android:textColor="@color/jinhuang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/test4"
                    android:textSize="80sp"
                    android:layout_marginTop="8dp"
                    android:text="新春快乐"
                    android:textColor="@color/jinhuang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>



</RelativeLayout>