<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/www1"
        android:minWidth="320dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/title21"
            android:text="举办企业"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>


        <EditText
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:hint="请输入文字内容"
            android:background="@null"
            android:text="中国电信"
            android:gravity="center"
            android:id="@+id/xiangce1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
        <TextView
            android:id="@+id/title221"
            android:text="修改文字大小"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>


        <EditText
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:text="60"
            android:inputType="phone"
            android:background="@null"
            android:gravity="center"
            android:id="@+id/daxiao1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>


      </LinearLayout>

        <View
            android:layout_width="0.8dp"
            android:background="@color/colorBar_bg"
            android:layout_height="match_parent"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/www"
        android:minWidth="320dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/title2"
            android:text="会议主题"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>


        <EditText
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:hint="请输入文字内容"
            android:background="@null"
            android:text="禾本智能科技有限公司"
            android:gravity="center"
            android:id="@+id/xiangce"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>
        <TextView
            android:id="@+id/title22"
            android:text="修改文字大小"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>


        <EditText
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:text="30"
            android:inputType="phone"
            android:background="@null"
            android:gravity="center"
            android:id="@+id/daxiao"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"/>



    </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_width="0dp"
            android:textColor="@color/colorBar_bg"
            android:layout_weight="1"
            android:text="确认"
            android:id="@+id/queren"
            android:textSize="16sp"
            android:background="@null"
            android:layout_height="50dp" />

        <View
            android:layout_width="0.6dp"
            android:background="@color/tabtextcolo"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:background="@null"
            android:layout_weight="1"
            android:textSize="16sp"
            android:id="@+id/quxiao"
            android:text="取消"
            android:textColor="@color/colorBar_bg"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>